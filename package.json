{
  "name": "changed-lines-count",
  "displayName": "Changed Lines Count",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "changed-lines-count.setTargetBranch",
        "title": "Changed Lines Count: Set target branch"
      },
      {
        "command": "changed-lines-count.setQuantityThreshold",
        "title": "Changed Lines Count: Set changes quantity threshold"
      }
    ],
    "configuration": {
      "title": "Changed Lines Count",
      "properties": {
        "changedLinesCount.disableStatusBarIconColorChange": {
          "description": "Disables the status bar icon color change when changes count is higher than the defined threshold.",
          "type": "boolean",
          "default": false
        },
        "changedLinesCount.disableNotifications": {
          "description": "Disables the notification when changes count is higher than the defined threshold.",
          "type": "boolean",
          "default": false
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "changed-lines-count.setTargetBranch",
          "when": "changedLinesCount.isGitInitialized"
        },
        {
          "command": "changed-lines-count.setQuantityThreshold",
          "when": "changedLinesCount.isGitInitialized"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "prettier": "2.8.7",
    "typescript": "^4.9.5"
  }
}
